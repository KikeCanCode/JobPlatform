        <li>Post 1 entry-level job</li>
        <li>Applications sent directly to your email</li>
        <!-- <li>Company logo displayed</li> -->
      </ul>
      <a href="#" class="cta-btn">Post a Job</a>
    </div>

    <!-- 3 Job Bundle -->
    <div class="pricing-card featured">
      <h3>3-Job Bundle <span class="best-value">Best Value</span></h3>
      <p class="price">£49.99</p>
      <p class="duration">Use within 90 days</p>
      <ul>
        <li>Post up to 3 jobs</li>
        <li>Applications sent directly to your email</li>
        <li>Company logo displayed</li>
      </ul>
      <a href="#" class="cta-btn">Get Bundle</a>
    </div>

    <!-- Featured Listing Add-On -->
    <div class="pricing-card">
      <h3>Featured Listing</h3>
      <p class="price">£9.99</p>
      <p class="duration">Per job upgrade</p>
      <ul>
        <li>Appear at the top of job search results</li>
        <li>Stand out to graduates</li>
      </ul>
      <a href="#" class="cta-btn">Upgrade</a>
    </div>
  </div>
