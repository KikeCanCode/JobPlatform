    <div class="contact-container">
        <h2>Contact Us</h2>
        <form id="contact-us" action="https://formsubmit.co/business0525@gmail.com" method="POST">
            <label for="full-name">Full Name</label>
            <input type="text" id="full-name" name="full-name" placeholder="Your full name" required> 
            <br>

            <label for="email">Email</label>
            <input type="email" id="email" name="email" placeholder="Your email" required>
            <br>

            <label for="phone">Phone Number</label>
            <input type="tel" id="phone" name="phone" placeholder="Your phone number" required>
            <br> 

            <label for="job-title">Job Title</label>
            <input type="text" id="job-title" name="job-title" placeholder="e.g: Software Developer">
            <br>

            <label for="message">Message</label>
            <textarea id="message" name="message" placeholder="Describe your project or needs" required></textarea>
            <br>

            <button type="submit">Submit</button>
            <input type="reset" value="Reset">
            <br>
            
        </form>
    </div>
