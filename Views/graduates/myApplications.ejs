<div class="heading">
<h1> My Applications </h1>
</div>
<% if (applications.length > 0) { %>
  <% applications.forEach(application => { %>
    <div class="application">
      <h3>Applied</h3>
      <p><strong>Job Title:</strong> 
        <a href="/jobs/<%= application.jobId %>"></a> <!-- Display the job details-->
        <%= application.jobTitle %></p>
      <p><strong>Company:</strong> <%= application.company_name %></p>
      <p><strong>Location:</strong> <%= application.location %></p>
      <p> Applied on <%= new Date(application.dateApplied).toLocaleDateString('en-GB') %></p>
    </div>
  <% }) %>
<% } else { %>
  <p>You have not applied for any jobs yet.</p>
<% } %>
