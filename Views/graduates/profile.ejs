     <br>
    <div class="profile-container">

        <h1> My Profile</h1>
 
            <div class="profile-card">
                <p><strong>Email:</strong> <%= graduate.email %></p> 
                <p><strong>First Name:</strong> <%= graduate.first_name %></p>
                <p><strong>Last Name:</strong> <%= graduate.last_name %></p>
                <p><strong>Contact Number:</strong> <%= graduate.contact_number %></p>
                <p><strong>Qualification:</strong> <%= graduate.qualification %></p>
                <p><strong>Bootcamp Institute:</strong> <%= graduate.bootcamp_institute %></p>
                <p><strong>Graduation Year:</strong> <%= graduate.graduation_year %></p>
                <p><strong>Skills:</strong> <%= graduate.skills %></p>
    
                <% if (graduate.certificatePath) { %>
                    <p><strong>Certificate:</strong></p>
                    <iframe src="<%= graduate.certificatePath %>" width="100%" height="400px"></iframe>
                    <br>
                    <a href="<%= graduate.certificatePath %>" download class="btn">Download Certificate</a>
                <% } else { %>
                    <p><strong>Certificate:</strong> Not uploaded</p>
                <% } %>
    
                <!-- Edit Button -->
                <a href="/graduates/updateProfile" class="btn"> Update Profile</a> - <!-- This is not decorated with chevron beacause it using html-->
                
                <!-- Delete Account Button -->
                <a href="/graduates/deleteAccount" class="btn"> Delete Account</a> 

            </div>
