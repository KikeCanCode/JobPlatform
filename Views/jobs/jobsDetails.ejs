 <div class="header-container">
  
  <form action="/jobs/JobSearch" method="GET" class="search-container">
    <input type="text" name="query" class="search-input" placeholder="Search for jobs...">
    <button type="submit" class="search-btn">Search</button>
  </form>
 </div>

<div class="job-container">

  <h1><%= job.title %></h1>
   
  <p><strong>Salary:</strong> Â£<%= job.salary %></p>
  
  <p><strong>Location:</strong> <%= job.location %></p>

  <p><strong>Qualification Required:</strong> <%= job.qualification_required %></p>
  
  <p><strong>Application Limit:</strong> <%= job.application_limit %></p>

  <p><strong>Expiration Date:</strong> <%= job.expiration_date %></p>

  <p><%= job.job_description %></p>


<!-- This session check if the graduates is logged in and render apply form, if not render login page and redirect to apply form-->
  <% if (isLoggedIn) { %>
    <a href="/graduates/apply/<%= job.id %>" class="btn"> Apply Now </a>

  <% } else { %>
    
    <a href="/graduates/login?redirect=/graduates/apply/<%= job.id %>" class="btn"> Login to Apply</a>
  <% } %>
 
</div>

